@page
@model AgroStock.Pages.OrdersModel

@{
    ViewData["Title"] = "Gestion des Commandes";
}

<div class="container mt-4">
    <h2>Gestion des Commandes</h2>

    <!-- Formulaire de recherche -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="startDate">Date de début</label>
                            <input type="date" class="form-control" id="startDate" name="startDate" value="@Model.StartDate?.ToString("yyyy-MM-dd")">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="endDate">Date de fin</label>
                            <input type="date" class="form-control" id="endDate" name="endDate" value="@Model.EndDate?.ToString("yyyy-MM-dd")">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="status">Statut</label>
                            <select class="form-control" id="status" name="status">
                                <option value="">Tous les statuts</option>
                                <option value="En attente" selected="@(Model.Status == "En attente")">En attente</option>
                                <option value="En cours" selected="@(Model.Status == "En cours")">En cours</option>
                                <option value="Prête" selected="@(Model.Status == "Prête")">Prête</option>
                                <option value="Livrée" selected="@(Model.Status == "Livrée")">Livrée</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="customerId">ID Client</label>
                            <input type="number" class="form-control" id="customerId" name="customerId" value="@Model.CustomerId" placeholder="ID client...">
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col">
                        <button type="submit" class="btn btn-primary">Rechercher</button>
                        <a href="/Orders" class="btn btn-secondary">Réinitialiser</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Tableau des résultats -->
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID Commande</th>
                    <th>Date</th>
                    <th>Client ID</th>
                    <th>Montant Total</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@order.CustomerId</td>
                        <td>@order.TotalAmount.ToString("C")</td>
                        <td>
                            <span class="badge @(order.Status switch {
                                "En attente" => "bg-warning",
                                "En cours" => "bg-info",
                                "Prête" => "bg-success",
                                "Livrée" => "bg-secondary",
                                _ => "bg-light"
                            })">@order.Status</span>
                        </td>
                        <td>
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-bs-toggle="dropdown">
                                    Modifier statut
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#" onclick="updateOrderStatus(@order.OrderId, 'En attente')">En attente</a></li>
                                    <li><a class="dropdown-item" href="#" onclick="updateOrderStatus(@order.OrderId, 'En cours')">En cours</a></li>
                                    <li><a class="dropdown-item" href="#" onclick="updateOrderStatus(@order.OrderId, 'Prête')">Prête</a></li>
                                    <li><a class="dropdown-item" href="#" onclick="updateOrderStatus(@order.OrderId, 'Livrée')">Livrée</a></li>
                                </ul>
                                <form method="post" style="display: inline;">
                                    <input type="hidden" name="orderId" value="@order.OrderId" />
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette commande ?')">
                                        Supprimer
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        function updateOrderStatus(orderId, newStatus) {
            if (confirm('Êtes-vous sûr de vouloir changer le statut de cette commande ?')) {
                fetch('/Orders?handler=UpdateStatus', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({ orderId: orderId, newStatus: newStatus })
                })
                .then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Une erreur est survenue lors de la mise à jour du statut.');
                    }
                });
            }
        }
    </script>
}
